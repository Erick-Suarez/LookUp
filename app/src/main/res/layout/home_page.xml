<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9ED2F0">

    <Button
        android:id="@+id/scan_face_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="74dp"
        android:text="Scan a person"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/user_profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="56dp"
        android:text="Your Profile"
        app:layout_constraintStart_toStartOf="@+id/scan_face_button"
        app:layout_constraintTop_toBottomOf="@+id/scan_face_button" />

    <Button
        android:id="@+id/contacts_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="215dp"
        android:layout_marginTop="216dp"
        android:text="Your Contacts"
        app:layout_constraintBottom_toBottomOf="@+id/requests_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/scan_face_button" />

    <Button
        android:id="@+id/info_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="53dp"
        android:text="Information"
        app:layout_constraintStart_toStartOf="@+id/contacts_button"
        app:layout_constraintTop_toBottomOf="@+id/contacts_button" />

    <EditText
        android:id="@+id/number_of_requests"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="37dp"
        android:layout_marginEnd="11dp"
        android:layout_marginStart="109dp"
        android:ems="10"
        android:hint="0"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="#FF7E36"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/requests_text"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/requests_text"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginEnd="58dp"
        android:text="New Requests!"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/number_of_requests"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/number_of_requests" />
</android.support.constraint.ConstraintLayout>